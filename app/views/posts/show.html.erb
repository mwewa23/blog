<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>


<div id="comments">
  <% if @post.comments.present? %>
  <h1>Comments</h1>
  <% end %>
  <%#= @post.comments.each do |comment| %>
  <%#= render partial: "comments/comment", locals: {comment: comment} %>
  <%# end %>
<!---A cleaner way of looping through the comments than the above--->
  <%#= render partial: "comments/comment", collection: @post.comments %>
  
  <!---An even shorter/ cleaner way to loop through comments. Only works b/c conventions match the defaults-->
  <%= render @post.comments %>
  <h2>Add a Comment</h2>
  <%= render partial: "comments/form", locals: {comment: @posts.comments.new} %>
</div>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
